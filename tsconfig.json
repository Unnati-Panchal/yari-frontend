{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "baseUrl": ".",
    "paths": {
      "@yaari/*": ["./src/@yaari/*"],
      "~app/*": ["./src/app/*"],
      "~env/*": ["./src/environments/*"],
      "~store/*": ["./src/app/store/*"],
      "~auth/*": ["./src/app/modules/auth/*"],
      "~platform/*": ["./src/app/modules/platform/*"]
    }
  }
}
